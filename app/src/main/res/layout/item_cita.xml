<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:cardBackgroundColor="@color/BLANCO"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BLANCO"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_cita_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BLANCO"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/campoAccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_weight="4"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="start|right"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="16dp"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/campoHora"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="center|end"
                android:paddingTop="12dp"
                android:paddingEnd="16dp"
                android:text="TextView"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/campoFecha"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:fontFamily="@font/googlesans_medium"
                android:gravity="center|end"
                android:paddingTop="26dp"
                android:paddingEnd="16dp"
                android:text="TextView"
                android:textColor="@color/black" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_desc_expandible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/BLANCO"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/campoNombreEstab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    tools:text="Estetica Marisol" />

                <TextView
                    android:id="@+id/campoUbicacionEstab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/campoNombreEstab"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/googlesans_medium"
                    android:isScrollContainer="false"
                    android:maxWidth="200dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    tools:text="Calle puerto zapatos" />

                <TextView
                    android:id="@+id/btnEliminar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/googlesans_medium"
                    android:padding="20dp"
                    android:text="@string/eliminar"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>